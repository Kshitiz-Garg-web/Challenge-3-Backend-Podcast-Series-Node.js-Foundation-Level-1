    <main class="w-full max-w-2xl mx-auto mt-10 px-4">
      <ul class="space-y-4">
        <% for(let i = 0; i < homeRegistered.length; i++) { %>
        <li
          class="flex items-center space-x-4 text-lg font-semibold text-gray-800 bg-white p-4 rounded-lg shadow-md border-l-4 border-red-500 transition-transform duration-300 transform origin-left hover:scale-[1.02] hover:shadow-lg"
        >
          <span class="text-red-500 text-xl font-bold">
            &nbsp;<%= i + 1 %>.</span
          >
          <span class="flex-1"><%= homeRegistered[i].houseName %></span>
