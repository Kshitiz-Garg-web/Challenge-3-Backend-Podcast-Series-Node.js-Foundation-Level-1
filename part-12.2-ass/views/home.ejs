<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home</title>
    <link rel="stylesheet" href="/output.css" />
    <style>
      /* Confetti Animation */
      @keyframes confetti {
        0% {
          transform: translateY(-100vh) rotate(0deg);
        }
        100% {
          transform: translateY(100vh) rotate(360deg);
        }
      }
      .confetti {
        position: fixed;
        top: -10px;
        left: 0;
        width: 10px;
        height: 10px;
        background: #ffd700;
        animation: confetti 5s linear infinite;
        z-index: 1000;
      }
      .confetti:nth-child(2n) {
        background: #ff6b6b;
      }
      .confetti:nth-child(3n) {
        background: #4ecdc4;
      }
      .confetti:nth-child(4n) {
        background: #ff9f43;
      }

      /* Background Gradient Animation */
      body {
        background-image: linear-gradient(to right, #434343 0%, black 100%);
        background-size: 400% 400%;
        animation: gradient 15s ease infinite;
        min-height: 100vh;
        margin: 0;
        padding: 0;
        font-family: "Arial", sans-serif;
      }
      @keyframes gradient {
        0% {
          background-position: 0% 50%;
        }
        50% {
          background-position: 100% 50%;
        }
        100% {
          background-position: 0% 50%;
        }
      }

      /* Glassmorphism UI */
      .glassmorphism {
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(10px);
        border-radius: 12px;
        border: 1px solid rgba(255, 255, 255, 0.2);
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      }

      /* Header Styling */
      header {
        background: rgba(255, 255, 255, 0.1); /* Glassmorphism effect */
        backdrop-filter: blur(10px);
        border-bottom: 1px solid rgba(255, 255, 255, 0.2);
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        z-index: 1000;
        padding: 10px 20px;
      }

      /* Logo Animation */
      @keyframes logo-bounce {
        0%,
        100% {
          transform: translateY(0);
        }
        50% {
          transform: translateY(-5px);
        }
      }
      .logo {
        animation: logo-bounce 2s infinite;
      }

      /* Navigation Buttons */
      .nav-btn {
        background: rgba(255, 255, 255, 0.2);
        border: 1px solid rgba(255, 255, 255, 0.3);
        color: white;
        padding: 8px 16px;
        border-radius: 8px;
        transition: all 0.3s ease;
      }
      .nav-btn:hover {
        background: rgba(255, 255, 255, 0.3);
        transform: scale(1.05);
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
      }

      /* Text Bounce Animation */
      @keyframes bounce {
        0%,
        100% {
          transform: translateY(0);
        }
        50% {
          transform: translateY(-10px);
        }
      }
      .bounce-text {
        animation: bounce 2s infinite;
      }

      /* Button Hover Effect */
      .btn-hover {
        background: rgba(255, 255, 255, 0.2);
        border: 1px solid rgba(255, 255, 255, 0.3);
        color: white;
        padding: 8px 16px; /* Smaller button size */
        border-radius: 8px;
        transition: all 0.3s ease;
      }
      .btn-hover:hover {
        background: rgba(255, 255, 255, 0.3);
        transform: scale(1.05);
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
      }

      /* Grid Container */
      .grid-container {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
        padding: 20px;
      }

      /* Card Styling */
      .card {
        background: rgba(255, 255, 255, 0.1); /* Lighter background */
        backdrop-filter: blur(10px);
        border-radius: 12px;
        border: 1px solid rgba(255, 255, 255, 0.2);
        overflow: hidden;
        transition: transform 0.2s, box-shadow 0.2s;
      }
      .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
      }

      /* Card Image */
      .card img {
        width: 100%;
        height: 180px;
        object-fit: cover;
      }

      /* Card Content */
      .card-content {
        padding: 16px;
      }

      /* Card Title */
      .card-content h3 {
        font-size: 1.25rem;
        margin: 0 0 8px;
        color: white;
        font-weight: 600;
      }

      /* Card Location */
      .card-content .location {
        font-size: 0.9rem;
        color: rgba(255, 255, 255, 0.8);
        margin: 0 0 8px;
        display: flex;
        align-items: center;
      }
      .card-content .location i {
        margin-right: 6px;
      }

      /* Card Price */
      .card-content .price {
        font-size: 1.1rem;
        font-weight: bold;
        color: #ff6b6b;
        margin: 0 0 8px;
      }

      /* Card Rating */
      .card-content .rating {
        font-size: 0.9rem;
        color: rgba(255, 255, 255, 0.8);
        display: flex;
        align-items: center;
      }
      .card-content .rating span {
        margin-left: 4px;
      }
    </style>
  </head>
  <body>
    <!-- Confetti Animation -->
    <div class="confetti"></div>
    <div class="confetti"></div>
    <div class="confetti"></div>
    <div class="confetti"></div>
    <div class="confetti"></div>

    <!-- Header -->
    <header class="flex justify-between items-center">
      <h1 class="text-red-600 text-3xl font-bold logo">
        üè° Welcome to Airbnb ‚úàÔ∏è
      </h1>
      <div class="space-x-4">
        <a href="/" class="nav-btn">üè† Home</a>
        <a href="./host/add-home" class="nav-btn">‚ûï Add Home</a>
      </div>
    </header>

    <!-- Main Content -->
    <main class="container mx-auto p-8 mt-10 max-w-6xl">
      <!-- Horizontal Line -->
      <div class="w-full border-t-2 border-gray-300"></div>
      <h2 class="mt-20 text-3xl font-bold text-center mb-6 text-white bounce-text">
        Here are our registered homes:
      </h2>
      <div class="grid-container">
        <% homeRegistered.forEach(home => { %>
        <div class="card glassmorphism">
          <img src="<%= home.housePhotoUrl %>" alt="<%= home.houseName %>" />
          <div class="card-content">
            <h3><%= home.houseName %></h3>
            <p class="location">
              <i class="fas fa-map-marker-alt"></i><%= home.houseLocation %>
            </p>
            <p class="price">Rs <%= home.housePrice %> / night</p>
            <div class="rating">
              Rating: <span><%= home.houseRating %></span>
            </div>
            <button class="btn-hover mt-4">Book Now</button>
          </div>
        </div>
        <% }) %>
      </div>
    </main>
  </body>
</html>